  <display-name>09-cookieSession</display-name>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>remberServlet</servlet-name>
    <servlet-class>cookieServlet.remberServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetProductByIdServlet</servlet-name>
    <servlet-class>servlet.GetProductByIdServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>clearHistoryServlet</servlet-name>
    <servlet-class>servlet.clearHistoryServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>add2cartServlet</servlet-name>
    <servlet-class>servlet.add2cartServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>clearcartServlet</servlet-name>
    <servlet-class>servlet.clearcartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>remberServlet</servlet-name>
    <url-pattern>/remberServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetProductByIdServlet</servlet-name>
    <url-pattern>/GetProductByIdServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>clearHistoryServlet</servlet-name>
    <url-pattern>/clearHistoryServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>add2cartServlet</servlet-name>
    <url-pattern>/add2cartServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>clearcartServlet</servlet-name>
    <url-pattern>/clearcartServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
